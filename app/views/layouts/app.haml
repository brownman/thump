!!!
%html
  %head
    %title Thump - a location aware social network
    = stylesheet_link_tag 'reset', 'app'
    = javascript_include_tag "http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=true_or_false&amp;key=#{GOOGLE_MAPS_API_KEY[request.host]}&sensor=true", 'jquery', 'app'
  %body
    #map
    #header
      #user_nav
        / = gravatar_for current_user, :size => '20'
        = link_to "Settings", settings_user_path(current_user)
        |            
        = link_to "Logout", logout_path
    - flash.each do |key, msg|
      = content_tag(:div, msg, :id => key)
    #main
      = yield